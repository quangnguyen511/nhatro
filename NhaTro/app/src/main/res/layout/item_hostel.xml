<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180dp"
    android:layout_marginBottom="@dimen/_8dp">

    <ImageView
        android:id="@+id/itemHostel_imvHostel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_hostel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_14dp"
        android:background="@drawable/shape_black_opacity_radius"
        android:orientation="vertical"
        android:padding="@dimen/_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itemHostel_tvAddress"
            fontPath="@string/font_gothic_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/white"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemHostel_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:--"
                android:textColor="@color/white" />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/itemHostel_tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_16dp"
                android:drawableStart="@drawable/ic_phone"
                android:text="--"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <RatingBar
        android:id="@+id/itemHostel_rbRating"
        android:layout_width="@dimen/_75dp"
        android:layout_height="@dimen/_14dp"
        android:layout_margin="@dimen/_14dp"
        android:rating="3"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemHostel_tvRatingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_14dp"
        android:layout_marginStart="@dimen/_8dp"
        android:text="--"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemHostel_rbRating" />
</android.support.constraint.ConstraintLayout>