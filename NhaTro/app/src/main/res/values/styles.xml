<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="editText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:background">@drawable/shape_black_opacity_radius</item>
        <item name="android:textColorHint">@color/white60</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/shape_yellow_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">@dimen/_30dp</item>
    </style>
    <style name="divider_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:background">@color/warmGrey50</item>
    </style>
    <style name="detail_title">
        <item name="fontPath">@string/font_gothic_bold</item>
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
